<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRouteActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_field"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/start_field"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Start Point"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/step_field"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Steps"
                android:inputType="textPersonName" />

            <RadioGroup
                android:id="@+id/run_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/loop_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Loop" />

                <RadioButton
                    android:id="@+id/out_and_back_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Out-and-back" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/flat_hilly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/flat_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Flat" />

                <RadioButton
                    android:id="@+id/hilly_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Hilly" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/route_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/streets_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Streets" />

                <RadioButton
                    android:id="@+id/trail_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Trail" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/surface_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/even_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Even" />

                <RadioButton
                    android:id="@+id/uneven_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Uneven" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/easy_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Easy" />

                <RadioButton
                    android:id="@+id/moderate_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Moderate" />

                <RadioButton
                    android:id="@+id/hard_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hard" />
            </RadioGroup>

            <MultiAutoCompleteTextView
                android:id="@+id/note_field"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:gravity="top|left"
                android:hint="Note"
                android:lines="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/save_buttton" />

            <Button
                android:id="@+id/save_buttton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:text="Save Route" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>